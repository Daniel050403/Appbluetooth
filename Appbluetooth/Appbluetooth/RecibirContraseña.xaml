<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               NavigationPage.HasNavigationBar="False"
               BackgroundImage="fondo4.png"
             x:Class="Appbluetooth.RecibirContraseña">
    <Grid RowDefinitions="10*,10*,70*, 10*">
        <Image Grid.Row="0" Source="logo.png" HeightRequest="60" HorizontalOptions="Start" VerticalOptions="Center"></Image>
        <Label Grid.Row="1" Text="Ingresa credencial" FontAttributes="Bold" FontSize="Title" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"></Label>
        <ContentView Grid.Row="2">
            <Grid RowDefinitions="10*,10*,10*,10*,10*,10*,10*,10*,10*,10*" ColumnDefinitions="10*,80*,10*">

                <Entry Grid.Row="2" Grid.Column="1"  Placeholder="Credencial" PlaceholderColor="#A5A5A5" TextColor="Black" ></Entry>
                <Button Grid.Row="4" Grid.Column="1" Text="Validar" CornerRadius="10" x:Name="Validar" Clicked="Validar_Clicked" BackgroundColor="#3D809B"></Button>

            </Grid>
        </ContentView>
    </Grid>
</ContentPage>